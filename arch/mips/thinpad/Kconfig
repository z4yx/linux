choice
	prompt "Machine type"
	depends on MACH_THINPAD
	default THINPAD_SPANTAN6

config THINPAD_SPANTAN6
    bool "Thinpad with Spantan6 by LiShanshan"

config THINPAD_NG_ARTIX7
    bool "Thinpad-NG with Artix7"

config DE2I_CYCLONE4
	bool "Terasic DE2i development board"

config FPGA_A7_NSCSCC
    bool "FPGA-A7 board for NSCSCC"

config FPGA_K7_EES
    bool "E-elements board with Kintex-7 FPGA"

endchoice
